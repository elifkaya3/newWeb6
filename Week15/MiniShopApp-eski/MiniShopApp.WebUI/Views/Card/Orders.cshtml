@model List<OrderListModel>

<h6 class="display-4">Orders</h6>
<hr />
@foreach (var order in Model)
{
    <table class="table table-sm table-bordered mb-3">
        <thead>
            <tr class="table-info">
                <th colspan="2">Order Number: #@order.OrderNumber | Order Date: @order.OrderDate</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
            <tr>

            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
            <tr>
                <td width="25">
                    <a  asp-controller="MiniShop"
               asp-action="Details"
               asp-route-url=@orderItem.ImageUrl>
                        <img src="~/img/@orderItem.ImageUrl" width="20" alt="Alternate Text" />
                    </a>
                </td>
                <td>@orderItem.Name</td>
                <td class="100">@orderItem.Price</td>
                <td class="20">@orderItem.Quantity</td>
                <td class="150">@((orderItem.Price*orderItem.Quantity).ToString("c"))</td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"><span class="text-danger">Customer Name:</span>@order.FirstName @order.LastName</td>
                <td rowspan="4"><span>Total: </span>@order.TotalPrice().ToString("c")</td>
            </tr>
            <tr>
                <td colspan="2"><span class="text-danger">Address: </span>@order.Address</td>
                <td colspan="2"><span class="text-danger">City: </span>@order.City</td>

            </tr>
            <tr>
                <td colspan="2"><span class="text-danger">Phone: </span>@order.Phone</td>
                <td colspan="2"><span class="text-danger">Email: </span>@order.Email</td>

            </tr>
            <tr>
                <td colspan="2"><span class="text-danger">Order Status: </span>@order.OrderState</td>
                <td colspan="2"><span class="text-danger">Payment Type: </span>@order.PaymentType</td>

            </tr>
           
        </tfoot>
    </table>
}