@model List<YemekTarifleriApp.Entity.Recipe>

@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-9">
        <div class="row">
            @foreach (var recipe in Model)
            {
                <div class="col-md-4">
                    @await Html.PartialAsync("_RecipeDetails", recipe)
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @*@await Component.InvokeAsync("Categories")*@
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Search</h5>
                </div>
                <div class="card-body">
                    <form action="Search">
                        <div class="form-group">
                            <input type="text" name="q" class="form-control" placeholder="Search" />
                            <div class="mt-2">
                                <button type="submit" class="btn btn-sm btn-danger w-100">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


