@model YemekTarifleriApp.WebUI.Models.RecipeListViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-9">
        <div class="row">

            @foreach (var recipe in Model.Recipes)
            {
                <div class="col-md-4">
                    @await Html.PartialAsync("_RecipeDetails", recipe)
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("Categories")

        </div>
    </div>
</div>


