@model YemekTarifleriApp.

@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-9">
        <div class="row">
            @ (Model.Products.Count == 0)
            {
            <partial name="_NoProduct" />
            }
            else
            {
                 @foreach (var recipe in Model)
                  {
                  <div class="col-md-4">
                    @await Html.PartialAsync("_RecipeDetails", recipe)
                  </div>
                  }
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("Categories")

        </div>
    </div>
</div>


