@model List<Category>
<div class="list-group">
    <a asp-controller="DurkayaRecipe" asp-action="List" asp-route-category="" class="list-group-item list-group-item-action bg-warning text-dark">Tümünü Göster</a>
    @foreach (var item in Model)
    {
        <a asp-controller="DurkayaRecipe"
           asp-action="List"
           asp-route-category="@item.Url"
           class="list-group-item list-group-item-action bg-warning text-dark @(ViewBag.SelectedCategory==item.Url ? "active" : "")">@item.CategoryName</a>
     }
</div>