@model List<Category>
<div class="list-group">
    <a asp-controller="DurkayaRecipe" asp-action="List" asp-route-category="" style="background-color: #bdc3c7" class="list-group-item list-group-item-action  text-dark">Tümünü Göster</a>
    @foreach (var item in Model)
    {
        <a asp-controller="DurkayaRecipe"
           asp-action="List"
           asp-route-category="@item.Url"
          style="background-color: #bdc3c7" class="list-group-item list-group-item-action text-dark @(ViewBag.SelectedCategory==item.Url ? "active" : "")">@item.CategoryName</a>
     }
</div>