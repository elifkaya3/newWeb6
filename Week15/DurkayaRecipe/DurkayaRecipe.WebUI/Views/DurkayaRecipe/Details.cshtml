@model FoodDetailModel

<div class="row">
    <div class="col-md-2">
        <img src="~/img/@Model.Food.ImageUrl" class="img-fluid" alt="Alternate Text" />
    </div>
    <div class="col-md-10">
        <h1 class="mb-3">@Model.Food.FoodName</h1>
        <hr />
        @foreach (var item in Model.Categories)
        {
<a asp-controller="DurkayaRecipe"
   asp-action="List"
   asp-route-category="@item.Url"
   class="btn btn-link p-0 mb-3">@item.CategoryName </a>            
   }
        <div class="mb-3">
            <div class="mb-3 bg-light">
                <p>@Model.Food.FoodMaterial</p>
                <p>@Model.Food.FoodDescription</p>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Add to Card</button>
        </div>
    </div>
</div>
