@model List<DatabaseImageProject.Models.Entities.Product>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Product List</h1>
<p>
    <a asp-action="Create">Create New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td>
                    <img src="@product.ProductImage" width="100"/>
                </td>
            </tr>
        }
    </tbody>
</table>
