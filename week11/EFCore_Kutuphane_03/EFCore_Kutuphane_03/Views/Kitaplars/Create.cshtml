@model EFCore_Kutuphane_03.Models.Kitaplar

@{
    ViewData["Title"] = "Yeni Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Kitap Kaydı</h1>

<h4>Kitaplar</h4>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SayfaSayisi" class="control-label">Sayfa Sayısı</label>
                <input asp-for="SayfaSayisi" class="form-control" />
                <span asp-validation-for="SayfaSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stok" class="control-label"></label>
                <input asp-for="Stok" class="form-control" />
                <span asp-validation-for="Stok" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">


            <div class="form-group">
                <label asp-for="TurId" class="control-label"></label>
                <select asp-for="TurId" class="form-control" asp-items="ViewBag.TurId"></select>
            </div>
            <div class="form-group">
                <label asp-for="YazarId" class="control-label"></label>
                <select asp-for="YazarId" class="form-control" asp-items="ViewBag.YazarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="YayinEviId" class="control-label"></label>
                <select asp-for="YayinEviId" class="form-control" asp-items="ViewBag.YayinEviId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index">Listeye Geri Dön</a>
            </div>
        </div>
    </div>
</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
