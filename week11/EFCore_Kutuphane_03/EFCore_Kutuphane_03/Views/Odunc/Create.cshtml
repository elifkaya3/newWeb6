@model EFCore_Kutuphane_03.Models.Odunc

@{
    ViewData["Title"] = "Yeni Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Ödünç Kayıt</h1>

<h4>Odunc</h4>
<hr />

<form asp-action="Create">
    <div class="row">
        <div class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UyeId" class="control-label">Uye ID</label>
                <select asp-for="UyeId" class="form-control" asp-items="ViewBag.UyeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="KitapIsbn" class="control-label">Kitap ISBN</label>
                <select asp-for="KitapIsbn" class="form-control" asp-items="ViewBag.KitapIsbn"></select>
            </div>
            <div class="form-group">
                <label asp-for="VerilisTarihi" class="control-label">Veriliş Tarihi</label>
                <input asp-for="VerilisTarihi" class="form-control" />
                <span asp-validation-for="VerilisTarihi" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="TeslimTarihi" class="control-label">Teslim Tarihi</label>
                <input asp-for="TeslimTarihi" class="form-control" />
                <span asp-validation-for="TeslimTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Iptal" class="control-label">İptal</label>
                <input asp-for="Iptal" class="form-control" />
                <span asp-validation-for="Iptal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yeni Kayıt" class="btn btn-primary" />
            </div><div>
                <a asp-action="Index">Listeye Dön</a>
            </div>
        </div>
    </div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
