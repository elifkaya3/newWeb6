@model EF_Core_Mvc_Code.Models.Yayinevleri
@{
    ViewData["Title"] = "Create";
}
<h1 class="display-3">Yeni Yayın Evi</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                 <label class="control-label">Yayın Evi Adı</label>
                <input type="text" class="form-control" asp-for="Ad">
                <label class="control-label">Yayın Evi Adres</label>
                <input type="text" class="form-control" asp-for="Adres">
                <label class="control-label">Yayın Evi Telefon</label>
                <input type="text" class="form-control" asp-for="Tel">
            </div>
            <div class="form-group">
                 <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
        <div>
        <a asp-action="Index">Yayın Evi Listesine Dön</a>
    </div>
    </div>
    
</div>