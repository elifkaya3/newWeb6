@model Turler
@{
    ViewData["Title"] = "Create";
}
<h1 class="display-3">Yeni Kitap Türü</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Kitap Türü</label>
                <input type="text" asp-for="TurAd" class="form-control">
            </div>
            <div class="form-group">
                 <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
        <div>
        <a asp-action="Index">Kitap Türü Listesine Dön</a>
    </div>
    </div>
    
</div>