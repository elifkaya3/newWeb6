@model EF_Core_Mvc_Code.Models.Turler

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h4>Kitap Türü</h4>
    <h5>Tür ID:</h5>
    <p>@Model.Id</p>
    <h5> Kitap Türü</h5>
    <p>@Model.TurAd</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id">
    <input type="submit" value="Kitap türünü sil" class="btn btn-sm btn-danger">
</form>
<a asp-action="Index">Kitap Türlerine Dön</a>