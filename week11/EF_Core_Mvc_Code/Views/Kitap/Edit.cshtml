@model Kitaplar
@{
    ViewData["Title"] = "Edit";
}

<h6 class="display-3">@Model.Ad Kitap Düzenleme Sayfası</h6>
<hr>
<form asp-action="Edit">
    <div class="row">
        <!--ikiye böldğk sayfayı -->
        <div class="col-md-4">
            <div class="mb-3">
                <label class="control-label" asp-for="Isbn">Kitap ISBN</label>
                <input class="form-control" type="text" asp-for="Isbn">
            </div>
            <div class="mb-3">
                <label class="control-label" asp-for="Ad">Kitap Adı</label>
                <input class="form-control" type="text" asp-for="Ad">
            </div>  
            <div class="mb-3">
                <label class="control-label" asp-for="SayfaSayisi">Sayfa Sayisi</label>
                <input class="form-control" type="text" asp-for="SayfaSayisi">
            </div>
            <div class="mb-3">
                <label class="control-label" asp-for="Stok">Stok</label>
                <input class="form-control" type="text" asp-for="Stok">
            </div>
        </div>
        <!-- tür yazar yayınevi-->
        <div class="col-md-4">
             <div class="mb-3">
                <label class="control-label" asp-for="TurId">Kitap Türü</label>
                <select class="form-select form-control" asp-for="TurId" asp-items="ViewBag.Tur"></select> 
            </div>
             <div class="mb-3">
                <label class="control-label" asp-for="YazarId">Yazarlar</label>
                <select class="form-select form-control" asp-for="YazarId" asp-items="ViewBag.Yazar"></select> 
            </div>
             <div class="mb-3">
                <label class="control-label" asp-for="YayinEviId">Yayın Evleri</label>
                <select class="form-select form-control" asp-for="YayinEviId" asp-items="ViewBag.YayinEvi"></select> 
            </div>
            <div class="mb-3">
                <button asp-action="Edit" type="submit" class="btn btn-success">Değişiklikleri Kaydet</button>
            </div>
        </div>
    </div>
</form>

