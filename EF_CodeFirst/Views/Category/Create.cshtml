@model EF_CodeFirst.Models.Entities.Category
@{
    ViewData["Title"] = "Create";
}

<h1 class="display-3">New Book Category</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Book Category Name</label>
                <input type="text" asp-for="CategoryName" class="form-control">
                <input type="hidden" asp-for="CategoryId">
                
                <label class="control-label">Category Description</label>
                <input class="form-control" type="text" asp-for="CategoryDescription">
            </div>
            <div class="form-group">
                 <input type="submit" value="Save Changes" class="btn btn-success">
            </div>
        </form>
        <div>
        <a asp-action="Index">Back to Categories</a>
    </div>
    </div>
    
</div>