@model EF_CodeFirst.Models.Entities.Category
@{
    ViewData["Title"] = "Delete";
}
<h3>Category Delete</h3>

<div>
    <h2>Book Category</h2>
    <h5>Category Id</h5>
    <p>@Model.CategoryId</p>
    <h5>Category Name</h5>
    <p>@Model.CategoryName</p>
    <h5>Description</h5>
    <p>@Model.CategoryDescription</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="CategoryId">
    <input type="submit" value="Delete Category of Book" class="btn btn-sm btn-danger">
</form>
<a asp-action="Index">Back to Categories</a>
