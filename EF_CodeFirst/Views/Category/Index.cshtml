@model List<EF_CodeFirst.Models.Entities.Category>
@{
    ViewData["Title"] = "Index";
}
<h3>Book Categories</h3>

<a asp-action="Create">New Category</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th>Book Categories Id</th>
            <th>Book Category Name</th>
            <th>To Do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@category.CategoryId">Details</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>