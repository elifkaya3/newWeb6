@model EF_CodeFirst.Models.Entities.Category
@{
    ViewData["Title"] = "Edit";
}
<h3>Book Categories Edit</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label class="control-label">Category Id</label>
                <label class="control-label" asp-for="CategoryId">@Model.CategoryId</label><br>
                <input type="hidden" asp-for="CategoryId">
                <label class="control-label">Book Category</label>
                <input class="form-control" type="text" asp-for="CategoryName">
                <label class="control-label">Category Description</label>
                <input class="form-control" type="text" asp-for="CategoryDescription">
            </div>
             <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save Changes">
            </div>
        </form>

    </div>

</div>

<a asp-action="Index">Back to Categories</a>
