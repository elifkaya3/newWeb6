@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        @* Buraya kategoriler gelecek *@
        @await Component.InvokeAsync("Categories")
        @*☺ Burada search partial viewini çağıracağız*@
        <div class="card mt-4">
            <div class="card-header">
                <h5>Search</h5>
            </div>
            <div class="card-body">
                <form action="Search">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search" />
                        <div class="mt-2">
                            <button type="submit" class="btn btn-sm btn-danger w-100">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            @if (Model.Count == 0)
             {
                <partial name="_NoProduct" />
             }
            else
            {
                @* Urunler listlenecek *@
                @foreach (var product in Model)
                 {
                    <div class="col-md-4">
                        @*//buraya partial view gelecek*@
                        @await Html.PartialAsync("_Product", product)
                        @*<partial name="_Product" model="product" />*@

                    </div>
                 }
            }
        </div>
        @* buraya sayfalama kodları geleck *@
        <div class="row">
            <div class="col">
                <nav>
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link">3</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>