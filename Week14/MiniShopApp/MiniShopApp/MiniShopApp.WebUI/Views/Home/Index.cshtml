@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        @* Buraya kategoriler gelecek *@
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-md-9">
        <div class="row">
            @* Urunler listlenecek *@
            @foreach (var product in Model)
            {
            <div class="col-md-3">
                @*//buraya partial view gelecek*@
                @await Html.PartialAsync("_Product", product)
                @*<partial name="_Product" model="product" />*@

            </div>
            }
        </div>

    </div>
</div>