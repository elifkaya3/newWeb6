@model YemekTarifleriApp.WebUI.Models.RecipeModel

<h3 class="display-3">Create Recipe</h3>
<hr />
<form asp-controller="Admin" asp-action="RecipeCreate" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-md-8">

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Recipe Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="RecipeName" />
                    <span asp-validation-for="RecipeName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Recipe Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="RecipeMaterial" />
                    <span asp-validation-for="RecipeMaterial" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Recipe Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="RecipeDescription" />
                    <span asp-validation-for="RecipeDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label class="col-form-label col-sm-3">Recipe Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="ImageUrl" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-sm-9">
                    <button type="submit" class="btn btn">Save Recipe</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">

            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="@item.CategoryId" name="categoryIds" id="category_@item.CategoryId" />
                    <label class="form-check-label">@item.CategoryName</label>
                </div>
            }

            <hr />
            <div class="form-check">
                <input type="checkbox" asp-for="IsApproved" class="form-check-input" />
                <label class="form-check-label">Is Approved?</label>
            </div>

            <div class="form-check">
                <input type="checkbox" asp-for="IsHome" class="form-check-input" />
                <label class="form-check-label">Is Home?</label>
            </div>
        </div>
    </div>
</form>