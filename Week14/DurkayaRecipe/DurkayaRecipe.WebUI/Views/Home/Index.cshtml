@model List<Food>

@{ ViewData["Title"] = "Home Page"; }

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
        <div style="background-color: #bdc3c7" class="card mt-3  text-light">
            <div class="card-header">
                <h5 class="text-dark">Search</h5>
            </div>
            <div class="card-body">
                <form action="Search">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search" />
                        <div class="mt-2">
                            <button  type="submit" class="btn btn-sm btn-primary w-100">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="row">
            @foreach (var food in Model)
            {
             <div class="col-md-4">
                    @await Html.PartialAsync("_Food", food)
              </div>            
             }
        </div>
    </div>
</div>
