@model FoodDetailModel

<div class="row">
    <div class="col-md-3">
        <img style="width:275px; height:300px;" src="~/img/@Model.Food.ImageUrl" class="img-fluid" alt="Alternate Text" />
    </div>
    <div class="col-md-9">
        <h1 class="mb-3 text-white">@Model.Food.FoodName</h1>
        <hr />
        @foreach (var item in Model.Categories)
        {
<a style="text-decoration: none" asp-controller="DurkayaRecipe"
   asp-action="List"
   asp-route-category="@item.Url"
   class="btn btn-link p-0 mb-3 text-light">@item.CategoryName </a>            
   }
        <div class="mb-3 col-md-5">
            <div class="mb-3 bg-light">
                <p>@Model.Food.FoodMaterial</p>
                <hr />
                <p>@Model.Food.FoodDescription</p>
            </div>
            @*<button type="submit" class="btn btn-primary btn-lg">Add to Card</button>*@
        </div>
    </div>
</div>
