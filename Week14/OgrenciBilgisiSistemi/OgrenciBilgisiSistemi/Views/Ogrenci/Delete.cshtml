@model OgrenciBilgisiSistemi.Models.Entities.Ogrenci
@{
    ViewData["Title"] = "Delete";
}

<h5 class="display-5">DELETE!</h5>
<hr>
@Model.OgrenciId
<br>
@Model.OgrenciNo
<br>
@Model.OgrenciAd
<br>
@Model.OgrenciSoyad
<br>
@Model.OgrenciDogumTarihi
<br>
@Model.OgrenciKayitTarihi
<br>
@Model.BolumId
<br>
@Model.OgrenciDersler
