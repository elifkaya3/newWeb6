    <input type="hidden" asp-for="OgrenciId">
    <input type="hidden" asp-for="OgrenciNo">
    <input type="hidden" asp-for="OgrenciAd">
    <input type="hidden" asp-for="OgrenciSoyad">
    <input type="hidden" asp-for="OgrenciDogumTarihi">
    <input type="hidden" asp-for="OgrenciKayitTarihi">
